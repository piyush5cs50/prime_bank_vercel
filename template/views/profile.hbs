<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">

    <!-- bootstrap css-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">


        <!-- fontawsome -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <title>Profile</title>
</head>
<body>


  <!-- Navbar -->

  <nav id="nav" class="navbar navbar-expand-lg navbar-light">
          <div class="container-fluid  d-flex justify-content-between">
            <a class="navbar-brand" href="/service">Prime-Banking</a>
              

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
        

                <form class="flex-end collapse navbar-collapse" id="navbarNav">
                  <ul id="nav_buttons" class="navbar-nav mt-md-3 mb-2 mb-lg-0">
                  <a id="login_btn" class="btn btn-outline-secondary me-2" 
                  type="button"   href="/service">
                  <i class="fa-solid fa-arrow-left-long"></i>
                </a>
                  <a type="submit" form="#create_account_form" id="account_btn" class="btn btn-outline-secondary me-2" 
                  type="button"   href="#create_account">
                  <i class="fa-solid fa-arrow-right-long"></i>
                </a>
                    
                  </ul>
                  
                </form>
              
          </div>
        </nav>


        <!-- Bank balance -->

    <div class="container ">
        <div class="row mt-5 mb-5">
            <div class="col-8 text-center pt-4 pb-4 m-auto  text-light border bank_balance">

              {{#if (fileExists passportImg)}}
              <img class="profileImg mb-3" src="/uploads/{{passportImg}}" width="150px" height="150px" alt="">
              {{else}}
              <img class="profileImg mb-3" src="/uploads/user.png" width="150px" height="150px" alt="">
              {{/if}}
              
                <h3 class="fw-extra-bold mb-3">
                    {{firstName}} {{lastName}}
                </h3>

                <hr>

                <h4 class="fw-bolder fs-4">
                    <i class="fa-solid fa-building-columns me-1"></i>
                    {{accountNumber}}
                    
                </h4>

                <hr>

                <h5 class="fs-5 fw-100">
                    <i class="fa-solid fa-coins me-1"></i>
                    {{ammount}}
                </h5>

               <hr>
 
               <h5 class="fs-6 fw-400">
                    <i class="fa-solid fa-phone me-1" style="color: #ffffff;"></i>
                    {{phone}}
                </h5>

<hr>


<h5 class="fs-6  fw-100">
                <i class="fa-solid fa-envelope me-1" style="color: #ffffff;"></i>
                    {{email}}
                </h5>

<hr>

                <h5 class="fs-6  fw-100">
                <i class="fa-solid fa-location-dot me-1" style="color: #ffffff;"></i>
                    {{city}},{{state}}
                </h5>

            </div>

        </div>
    </div>


  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header justify-content-center">
          <h5 class="modal-title text-center" id="exampleModalLabel">Enter 5 Digits OTP</h5>
        </div>
        <div class="modal-body text-center">
            <form action="/verify-otp" method="POST">
                <input class="pt-1 pb-1 ps-3 pe-3 border-2 rounded" type="text rounded"
                       inputmode="numeric"
                       autocomplete="one-time-code"
                       pattern="\d{6}"
                       required>
              </form>
        </div>
        <div class="modal-footer justify-content-center">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn dark_btn btn-primary text-start">Transact</button>
        </div>
      </div>
    </div>
  </div>
  

    <!-- footer -->
    
    <div id="footer" class="footer">
      <div id="footer__item">
        <li>
          Â© Copyright Prime-Banking Ltd.
        </li>
        <li>
          <a href="/terms_and_conditions">Terms & Conditions</a>
        </li>
        <li>
          <a href="/privacy_policy">Privacy Policy</a>

        </li>
      </div>
    </div>

    

    <!-- bootstrap js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>
</html>