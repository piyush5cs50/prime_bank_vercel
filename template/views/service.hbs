<body id="service_page_body">


  <!-- Navbar -->


  <nav id="nav" class="navbar navbar-expand-lg navbar-dark service_page_nav">
    <div class="container-fluid  d-flex justify-content-between">
      <a class="navbar-brand" href="/service">Prime-Banking</a>
        

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
  

          <div class="collapse navbar-collapse service_nav_button" id="navbarNav">
        <ul class="navbar-nav">
    
          <li class="nav-item me-2">
            <a class="nav-link" href="#">Transation-history</a>
          </li>
          <li class="nav-item">
            <a class="nav-link " href="#">Account-Details</a>
          </li>
          <li class="nav-item">
            <a class="nav-link " href="/logout">Logout</a>
          </li>
