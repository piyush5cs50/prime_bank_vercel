    <title>Recharge</title>
</head>
<body>


  <!-- Navbar -->

  <nav id="nav" class="navbar navbar-expand-lg navbar-light">
          <div class="container-fluid  d-flex justify-content-between">
            <a class="navbar-brand" href="/service">Prime-Banking</a>
              

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
        

                <form class="flex-end collapse navbar-collapse" id="navbarNav">
                  <ul id="nav_buttons" class="navbar-nav mt-md-3 mb-2 mb-lg-0">
                  <a id="login_btn" class="btn btn-outline-secondary me-2" 
                  type="button"   href="/service">
                  <i class="fa-solid fa-arrow-left-long"></i>
                </a>
                  <a type="submit" form="#create_account_form" id="account_btn" class="btn btn-outline-secondary me-2" 
                  type="button"   href="#create_account">
                  <i class="fa-solid fa-arrow-right-long"></i>
                </a>
                    
                  </ul>
                  
                </form>
              
          </div>
        </nav>


    <div class="contaioner" id="section_maring">

       
          <div id="create_account">

            <h2>Enter The Account Details</h2>

            <!-- bootstrap form -->
            <form action="/recharge" method="POST" id="create_account_form" class="row g-3 ">



                  <div class="col-md-6">
                    <label for="phone__number" class="form-label">Phone Number</label>
                    <input required id="phone__number" minl="" type="text" inputmode="numeric" min="10" max="10" class="form-control" placeholder="XX XXXX XXXX" aria-label="Phone number" name="phone__number">
                  </div>


<div class="col-md-6">
                    <label for="service__provider" class="form-label">Select Your Sevice Provider</label>
                    
                    <select id="service__provider"class="form-select" name="service__provider"  aria-label="Default select example">
  <option selected value="jio">Jio</option>
  <option value="airtel">Airtel</option>
  <option value="vi">VI</option>
  <option value="bsnl">BSNL</option>
</select>
                  </div>

                  <div class="col-md-6">
                    <label for="plans" class="form-label">Recharge Plan</label>

                    <select id="plans"class="form-select" name="plans"  aria-label="Default select example">
  <option selected value="199">199</option>
  <option value="299">299</option>
  <option value="399">399</option>
  <option value="499">499</option>
  <option value="599">599</option>
  <option value="699">699</option>
</select>
                  </div>


                  

                <div class="col-12">
                  <button type="submit" class="btn dark_btn text-light">Proceed to recharge</button>
                  {{!-- <button type="submit" class="btn dark_btn text-light" data-bs-target="#exampleModal"  data-bs-toggle="modal">Proceed Transaction</button> --}}
                </div>
              </form>
          </div>

    </div>


  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header justify-content-center">
          <h5 class="modal-title text-center" id="exampleModalLabel">Enter 5 Digits OTP</h5>
        </div>
        <div class="modal-body text-center">
            <form action="/verify-otp" method="POST">
                <input class="pt-1 pb-1 ps-3 pe-3 border-2 rounded" type="text rounded"
                       inputmode="numeric"
                       autocomplete="one-time-code"
                       pattern="\d{6}"
                       required>
              </form>
        </div>
        <div class="modal-footer justify-content-center">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn dark_btn btn-primary text-start">Transact</button>
        </div>
      </div>
    </div>
  </div>
  

    <!-- footer -->
    
    <div id="footer" class="footer">
